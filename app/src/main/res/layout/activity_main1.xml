<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#daf1f2"
    tools:context="com.sa.share.MainActivity1">

    <TextView
        android:id="@+id/text_app_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="29dp"
        android:text="ShareFile"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="italic" />

    <Button
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:text="SEND"
        android:id="@+id/button_sender"
        android:layout_marginTop="89dp"
        android:textSize="20sp"
        android:layout_below="@+id/text_app_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onSender"
        android:textColor="#ffff"
        android:background="@layout/mybutton"
        />

    <Button
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:text="receive"
        android:textSize="20sp"
        android:id="@+id/button_receiver"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/button_sender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onReceiver"
        android:textColor="#ffff"
        android:background="@layout/mybutton"
        />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="195dp"
        android:layout_height="114dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="467dp"
        android:layout_marginBottom="134dp"
        android:text="Gesture"
        android:textOff="gestureOFF"
        android:textOn="gestureOn" />

</RelativeLayout>
